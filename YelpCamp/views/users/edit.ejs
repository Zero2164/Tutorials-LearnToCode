<%- include("../partials/header") %>
<body class="auth">
    <%- include("../partials/navflash") %>
<div class="btnbg mt-5 p-2 pt-5">
    <div class="container pageContent text-center mb-0 mt-5 pb-5">
        <h1>Edit Profile</h1>
        <div class="row">
            <div class="formArea2 col-12">
                <form action="/users/<%= user._id %>?_method=PUT" method="POST" class="text-white text-left">
                    <h1 class="text-center border-bottom border-success"><%= user.username %></h1>
                    <div class="form-group text-center">
                        <label for="uavatar">Avatar</label>
                        <br>
                        <% if(!user.avatar) { %>
                        <i id="btun4Sub2" class="far fa-user"></i>
                        <% } else { %>
                        <img class="userProfileImg" src="<%= user.avatar %>">
                        <%  } %>
                        <input id="uavatar" class="form-control mt-2" type="text" name="user[avatar]" placeholder="Avatar URL" value="<%= user.avatar %>"
                            autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="uemail">Email</label>
                        <input id="uemail" class="form-control" type="email" placeholder="Add an Email" name="user[email]" value="<%= user.email %>"
                            autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="ufirstname">First Name</label>
                        <input id="ufirstname" class="form-control" type="text" placeholder="Add your First Name" name="user[firstName]" value="<%= user.firstName %>"
                            autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="ulastname">Last Name</label>
                        <input id="ulastname" class="form-control" type="text" placeholder="Add your Last Name" name="user[lastName]" value="<%= user.lastName %>"
                            autocomplete="off">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-primary btn-block">Save</button>
                    </div>
                </form>
                <br>
                <a href="/users/<%= user._id %>" class="btn btn-md btn-secondary btn-block"><i
                        id="animHovIcn" class="fas fa-arrow-left pr-2"></i><span id="animHovBtun">Cancel</span></a>
            </div>
        </div>
    </div>
</div>
<ul class="slideshow">
	<li></li>
	<li></li>
	<li></li>
	<li></li>
	<li></li>
</ul>
<%- include("../partials/footer") %>