<%- include("../partials/header") %>

<body class="auth">
    <%- include("../partials/navflash") %>
    <div class="btnbg mt-5 p-2 pt-5">
        <div class="container pageContent text-center mb-0 mt-5 pb-5 col-md-6 col-xl-4">
            <div class="container col-12">
                <h1>Campground not in YelpCamp?</h1>
                <h4>Add the details below!</h4>
                <div class="row">
                    <div class="formArea2 col-12">
                        <form action="/campgrounds" method="POST" class="text-white text-left">
                            <div class="form-group">
                                <label for="cname">Name</label>
                                <input id="cname" class="form-control" type="text" name="name"
                                    placeholder="Campground Name" autocomplete="off" required>
                            </div>
                            <div class="form-group">
                                <label for="cprice">Price</label>
                                <input id="cprice" class="form-control" type="number" name="price"
                                    placeholder="Price Per/Night (i.e. 5.00)" autocomplete="off" step="0.01" required>
                            </div>
                            <div class="form-group">
                                <label for="cimg">Campground Image URL</label>
                                <input id="cimg" class="form-control" type="text" name="img" placeholder="Image URL"
                                    autocomplete="off" required>
                            </div>
                            <div class="form-group">
                                <label for="Location">Location</label>
                                <input class="form-control" type="text" name="location" id="Location"
                                    placeholder="Location (i.e Yarra, VIC)">
                            </div>
                            <div class="form-group">
                                <label for="cdescription">Description</label>
                                <div class="input-group">
                                    <textarea id="cdescription" class="form-control desc" aria-label="With textarea"
                                        type="text" name="description" placeholder="Add Description" autocomplete="off"
                                        size="50" required></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-md btn-success btn-block">Add Campground</button>
                            </div>
                        </form>
                        <a href="/campgrounds" class="btn btn-md btn-secondary btn-block"><i id="animHovIcn"
                                class="fas fa-arrow-left pr-2"></i><span id="animHovBtun">Cancel</span></a>
                    </div>
                </div>
            </div>
        </div>
        <%- include("../partials/trademark2") %>
    </div>
    <ul class="background">
        <li></li>
    </ul>
    <%- include("../partials/footer") %>