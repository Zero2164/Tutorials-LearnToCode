<%- include("../partials/header") %>
<body class="dark">
	<%- include("../partials/navflash") %>
	<div class="header">
		<div class="container mt-5 col-12 pb-0 mb-0">
			<div class="bodyPage2 mb-0 bg-transparent">
				<div class="container text-center">
					<h4 class="pageHeader border-bottom-transparent text-center">
						Search Results:
					</h4>
					<% if(noMatch !== null) { %>
						<%	} else { %>
							<div class="container col-12 text-center text-white">
								<h3 class="text-white pb-3"><%= noMatch %></h3>
								<div class="d-flex justify-content-center align-items-center m-2">
									<div id="navSrch2" class="text-center pb-0">
										<form class="srch-box2" action="/campgrounds/campground/Srch" method="GET" autocomplete="off">
											<span id="navSrchBtn2 bg-dark" class="srch-butn2 m-auto ml-md-0">
												<i class="fas fa-search"></i>
											</span>
											<input id="navSrchInput2" class="srch-txt2" type="text" name="search" value=""
												placeholder="Campground Search...">
										</form>
									</div>
								</div>
							</div>
						<%	} %>
				</div>
			</div>
		</div>
	</div>
	<section class="btnbg">
		<div class="container pageContent col-12">
			<div id="overlay" class="text-center scrollBox">
				<div id="elem2" class="container d-flex">
					<% cmpGrounds.forEach(function(campground){ %>
					<div class="cmpBckgrnd pb-5 mb-3 col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
						<div class="thumbnail">
							<a class="linkTag" href="/campgrounds/<%= campground._id %>">
								<img class="cmpImg" src="<%= campground.img %>">
								<div class="caption">
									<h4>
										<%= campground.name %>
									</h4>
								</div>
							</a>
						</div>
					</div>
					<% });%>
				</div>
			</div>
			<% if(noMatch !== null) { %>
			<div class="container col-12 text-center text-white">
				<h3 class="text-white pb-3"><%= noMatch %></h3>
				<div class="d-flex justify-content-center align-items-center m-2">
					<div id="navSrch2" class="text-center pb-0">
						<form class="srch-box2" action="/campgrounds/campground/Srch" method="GET" autocomplete="off">
							<span id="navSrchBtn2 bg-dark" class="srch-butn2 m-auto ml-md-0">
								<i class="fas fa-search"></i>
							</span>
							<input id="navSrchInput2" class="srch-txt2" type="text" name="search" value=""
								placeholder="Campground Search...">
						</form>
					</div>
				</div>
			</div>
			<%	} %>
			<div class="container mt-0 pt-0">
				<% if(!currentUser) { %>
				<div class="container col-12 mt-0 pt-0">
					<div class="footerText text-white m-auto text-center pb-5 mb-3 mt-0 pt-4">
						<p class="d-inline pr-2">Login/Sign Up to Add a Campground</p>
						<div class="btn-group">
							<a href="/login" class="btn btn-md btn-success"><span>Login</span></a>
							<a href="/register" class="btn btn-md btn-outline-primary"><span>Sign Up</span></a>
						</div>
					</div>
				</div>
				<% } else { %>
				<div class="container col-6 mt-0 pt-0">
					<div class="footerText text-white m-auto text-center pb-5 mb-3 mt-0 pt-4">
						<a class="nav-link btn btn-md btn-success" href="/campgrounds/new">Add New Campground</a>
					</div>
				</div>
				<%  }%>
			</div>
		</div>
	</section>
	<div class="btnbg">
		<%- include("../partials/trademark") %>
	</div>
	<script type="text/javascript">

		jQuery(document).ready(function () {
			$('#navSrch').css('display', 'none');
		});

		function headerTransition() {
			var headerBg = document.getElementById('bgAreabody');
			window.addEventListener('scroll', function () {
				headerBg.style.opacity = 1 - +window.pageYOffset / 350 + '';
			});
		};
		headerTransition();

	</script>

	<%- include("../partials/footer") %>